{
    "compileOnSave": false,
    "compilerOptions": {
        "resolveJsonModule": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "jsx": "react",
        "paths": {
            "@/*":[
                "src/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "types/*"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
